<%= render 'shared/banner' %> <br>

<ul class="row d-flex justify-content-evenly">
  <% @lists.each do |list| %>
    <% if list.picture.attached? %>
     <li class="col-2 m-2 p-2">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.picture.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list), class: "text-light text-decoration-none" %>
        </div>
     </li>
    <% else  %>
      <li class="col-2 m-2 p-2">
        <div class="card-category bg-dark">
          <%= link_to list.name, list_path(list), class: "text-light text-decoration-none" %>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
<br><br>
<div class="container">
  <div class="d-flex justify-content-center">
  <%= link_to "Add a new list", new_list_path, class: "btn btn-secondary" %>
  </div>
</div>
